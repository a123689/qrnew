<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        app:layout_constraintDimensionRatio="312:224"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.86"
        android:background="@drawable/bg_dialog_rate"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/tvRate1"
            android:layout_width="wrap_content"
            android:text="@string/rate_app"
            android:textStyle="bold"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvRate"
            android:layout_width="0dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tvRate1"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Please rate us 5 stars"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"/>

        <RatingBar
            android:id="@+id/rbRate"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvRate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:backgroundTint="#2F80ED"
            android:progressBackgroundTint="#7E7C7C"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>